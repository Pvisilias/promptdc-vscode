{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "npm: compile",
            "type": "npm",
            "script": "compile",
            "group": "build",
            "presentation": {
                "panel": "shared",
                "reveal": "silent",
                "clear": true
            },
            "problemMatcher": [
                "$tsc"
            ]
        },
        {
            "label": "npm: watch",
            "type": "npm",
            "script": "watch",
            "group": "build",
            "presentation": {
                "panel": "shared",
                "reveal": "never",
                "clear": true
            },
            "isBackground": true,
            "problemMatcher": "$tsc-watch"
        },
        {
            "label": "Build Extension",
            "type": "shell",
            "command": "node",
            "args": ["scripts/build.js"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        }
    ]
} 